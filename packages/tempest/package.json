{
  "name": "@bizzell/tempest",
  "version": "1.0.0",
  "description": "Bizzell standard component library.",
  "sideEffects": false,
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/**.*",
    "src/**/*"
  ],
  "scripts": {
    "lint": "lint-staged",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OU-CS4263-fall2018/capstone-27th-sporadic.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/OU-CS4263-fall2018/capstone-27th-sporadic/issues"
  },
  "homepage": "https://github.com/OU-CS4263-fall2018/capstone-27th-sporadic#readme",
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(\\.|/)test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "tabWidth": 2
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint -c tslint.json"
    ],
    "*.{ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/plugin-syntax-class-properties": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@types/classnames": "^2.2.6",
    "@types/jest": "^23.3.1",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "jest": "^23.5.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.14.2",
    "rollup": "^0.66.6",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-typescript2": "^0.18.0",
    "ts-jest": "^23.1.4",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "react": "^16.6.0",
    "react-dom": "^16.6.0"
  }
}
